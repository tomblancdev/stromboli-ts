{
  "name": "stromboli-ts",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for Stromboli - Container orchestration for Claude Code agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "test": "bun test tests/unit/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage tests/unit/",
    "test:e2e": "bun test tests/e2e/",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "generate": "bun run scripts/generate.ts",
    "generate:mocks": "bun run scripts/generate-mocks.ts",
    "typecheck": "bunx tsc --noEmit"
  },
  "stromboli": {
    "apiVersion": "0.3.0-alpha",
    "apiVersionRange": ">=0.3.0-alpha"
  },
  "keywords": ["stromboli", "claude", "anthropic", "container", "orchestration", "sdk"],
  "author": "Tom Blanc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomblancdev/stromboli-ts"
  },
  "homepage": "https://github.com/tomblancdev/stromboli-ts#readme",
  "bugs": {
    "url": "https://github.com/tomblancdev/stromboli-ts/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@faker-js/faker": "^9.0.0",
    "@stoplight/prism-cli": "^5.0.0",
    "@types/bun": "^1.1.0",
    "msw": "^2.0.0",
    "openapi-typescript": "^7.0.0",
    "swagger2openapi": "^7.0.8",
    "typescript": "^5.6.0",
    "yaml": "^2.7.0"
  },
  "dependencies": {
    "openapi-fetch": "^0.12.0"
  }
}
